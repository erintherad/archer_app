    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/characters">All Characters</a></li>
        <li><a href="/characters/new">New Character</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
